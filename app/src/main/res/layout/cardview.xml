<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="33dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        android:padding="4dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@color/light_grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rb_3825" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zainba Arhamni"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold|italic"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/rating_image"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:src="@drawable/star2"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/first_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_comment"
                android:layout_marginLeft="20dp"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/second_comment"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/second_comment"
                android:textSize="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
